<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.LayoutData.PageTitle</title>

    @if (!string.IsNullOrEmpty(ViewBag.LayoutData.PageDescription))
    {
    <meta name="description" content="@ViewBag.LayoutData.PageDescription">
    }
    @Html.Raw(ViewBag.LayoutData.RobotsMeta)

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/200Towns/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/200Towns/css/site.css" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="~/200Towns/css/jetmenu.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    @Html.Partial("~/Views/200Towns/_Fonts.cshtml")
    @Html.Partial("~/Views/200Towns/_Analytics.cshtml")
</head>
<body class="pageTitle_@ViewBag.LayoutData.PageTag pageType_@ViewBag.LayoutData.PageType">
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <img id="headerimage" src="~/200Towns/css/images/header.jpg" />
                <a href="/?d=@ViewBag.LayoutData.SiteTag" class="navbar-brand">@ViewBag.LayoutData.SiteTitle</a>
                <h2 class="subheader">@ViewBag.LayoutData.SubTitle</h2>
            </div>
            @RenderSection("Menu")
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("Social")
        <footer>
            @RenderSection("Footer")
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/200Towns/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/200Towns/js/site.js" asp-append-version="true"></script>
    </environment>
    <script src="~/200Towns/js/jetmenu.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
