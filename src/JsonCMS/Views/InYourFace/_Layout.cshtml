<!DOCTYPE html>
<html ng-app="galleryApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>In Your Face Portrait Photography</title>
    <meta name="description" content="Photos by Patricia Anne Ruffe">
    @Html.Raw(ViewBag.LayoutData.RobotsMeta)

    <environment names="Development">
        <link rel="stylesheet" href="~/inyourface/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/inyourface/css/site.css" asp-append-version="true" />
    </environment>
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    @Html.Partial("~/Views/inyourface/_Fonts.cshtml")

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/inyourface/js/modernizr-2.6.2.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
    <script src="~/inyourface/js/controllers.js"></script>
    <script src="~/inyourface/js/api.js"></script>

    <link href="~/inyourface/css/jquery.fancybox-buttons.css" rel="stylesheet" />
    <link href="~/inyourface/css/jquery.fancybox-thumbs.css" rel="stylesheet" />
    <link href="~/inyourface/css/jquery.fancybox.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <!--[if IE]>
        <link rel="stylesheet" type="text/css" href="~/inyourface/css/ie.css" />
    <![endif]-->


</head>
<body class="pageTitle_@ViewBag.LayoutData.PageTag pageType_@ViewBag.LayoutData.PageType">
    <div class="container body-content">
        @RenderBody()
    </div>
    @Html.Partial("~/Views/inyourface/_Analytics.cshtml")

    <environment names="Development">
        <script src="~/inyourface/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/inyourface/js/site.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("scripts", required: false)
    <script src="~/inyourface/js/jquery.fancybox.pack.js"></script>
</body>
</html>
